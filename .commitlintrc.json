{
  "extends": [
    "@commitlint/config-conventional"
  ],
  "rules": {
    "type-enum": [
      2,
      "always",
      [
        "build",
        "chore",
        "ci",
        "docs",
        "feat",
        "fix",
        "perf",
        "refactor",
        "style",
        "test"
      ]
    ],
    "body-min-length": [
      2,
      "always",
      10
    ],
    "body-max-length": [
      2,
      "always",
      100
    ]
  }
}
